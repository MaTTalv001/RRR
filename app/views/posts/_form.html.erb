<%= form_with(model: post, class: "space-y-4") do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-error">
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "投稿者名", class: "label" %>
    <%= f.text_field :name, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= f.label :category, "カテゴリー", class: "label" %>
    <%= f.select :category, 
        ['プログラミング', '日常・休日', '仕事', 'アニメ・漫画などの展開', '性格・特性'], 
        { prompt: 'カテゴリーを選択してください' }, 
        { class: "select select-bordered w-full" } 
    %>
  </div>

  <div>
    <%= f.label :body, "投稿内容", class: "label" %>
    <%= f.text_area :body, class: "textarea textarea-bordered w-full h-32" %>
  </div>

  <div class="mt-4">
    <%= f.submit "投稿する", class: "btn btn-primary" %>
    <%= link_to "戻る", posts_path, class: "btn ml-2" %>
  </div>
<% end %>